local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/jensonhirst/Orion/main/source')))()
local Window = OrionLib:MakeWindow({
    Name = "SkyHub",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "SkyHubConfig",
    IntroText = "SkyHub Auto Summit"
})

local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Flag untuk kontrol loop
local autoSummitRunning = false
local autoSummitThread

MainTab:AddButton({
    Name = "Start Auto Summit",
    Callback = function()
        if autoSummitRunning then return end
        autoSummitRunning = true

        autoSummitThread = task.spawn(function()
            local Players = game:GetService("Players")
            local player = Players.LocalPlayer

            -- Posisi teleport Summit
            local targetPosition = Vector3.new(-655.8443, 1081.6111, 281.3544)

            -- Fungsi teleport
            local function teleportToPosition()
                local character = player.Character
                if character and character:FindFirstChild("HumanoidRootPart") then
                    character:MoveTo(targetPosition)
                end
            end

            -- Fungsi reset karakter
            local function killCharacter()
                local character = player.Character
                if character and character:FindFirstChild("Humanoid") then
                    character.Humanoid.Health = 0
                end
            end

            while autoSummitRunning do
                if not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") then
                    player.CharacterAdded:Wait()
                    task.wait(1)
                end

                teleportToPosition()
                task.wait(1)

                killCharacter()

                player.CharacterAdded:Wait()
                task.wait(1)
            end
        end)
    end
})

MainTab:AddButton({
    Name = "Stop Auto Summit",
    Callback = function()
        autoSummitRunning = false
    end
})
