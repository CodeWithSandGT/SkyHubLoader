local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/jensonhirst/Orion/main/source')))()
local Window = OrionLib:MakeWindow({
    Name = "SkyHub",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "SkyHubConfig",
    IntroText = "SkyHub"
})

local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Variabel untuk menyimpan input uang
local targetCash = 0

MainTab:AddTextbox({
    Name = "Input Cash Amount",
    Default = "1000000",
    TextDisappear = false,
    Callback = function(Value)
        local num = tonumber(Value)
        if num then
            targetCash = math.abs(num) -- Simpan sebagai positif dulu
            print("Target cash set to:", targetCash)
        else
            OrionLib:MakeNotification({
                Name = "Error",
                Content = "Input harus angka!",
                Image = "rbxassetid://4483345998",
                Time = 4
            })
        end
    end
})

MainTab:AddButton({
    Name = "Inject Cash",
    Callback = function()
        if targetCash and targetCash > 0 then
            local amountToSend = -targetCash
            local success, err = pcall(function()
                game:GetService("ReplicatedStorage").Purchase_Crate:FireServer(amountToSend)
            end)
            if success then
                OrionLib:MakeNotification({
                    Name = "Success",
                    Content = "Injected: R$" .. tostring(amountToSend),
                    Image = "rbxassetid://4483345998",
                    Time = 5
                })
            else
                warn("Failed to send cash:", err)
                OrionLib:MakeNotification({
                    Name = "Error",
                    Content = "Gagal inject: " .. tostring(err),
                    Image = "rbxassetid://4483345998",
                    Time = 5
                })
            end
        else
            OrionLib:MakeNotification({
                Name = "Warning",
                Content = "Masukkan jumlah uang dulu di textbox!",
                Image = "rbxassetid://4483345998",
                Time = 5
            })
        end
    end
})

local CreditTab = Window:MakeTab({
    Name = "Credit",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

CreditTab:AddLabel("Join our Discord: https://dsc.gg/skyhubs")
CreditTab:AddLabel("Youtube: https://youtube.com/@skyhubcommunitys")

-- Notifikasi setiap 1 menit
task.spawn(function()
    while true do
        OrionLib:MakeNotification({
            Name = "Support Us!",
            Content = "Join Discord & Subscribe YouTube:\nCheck the Credit tab!",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
        task.wait(60)
    end
end)
